<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f2f4"
    tools:context="com.example.administrator.zahbzayxy.activities.MyAccountPayActivity">
    <RelativeLayout
        android:background="@color/bg"
        android:layout_width="match_parent"

        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back_accountPay_iv"
            android:src="@mipmap/jiantou_big"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="余额支付"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="支付初始密码为登录密码"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg_retangle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp">
      <!--  <TextView
            android:text="请输入支付密码:"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />-->
        <EditText
            android:id="@+id/payPW_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#efefef"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="请输入支付密码"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/accountPay_bt"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="queRenPayOnclick"
        android:text="确定"
        android:background="@drawable/queren_blue_bg"
        android:layout_height="45dp" />
</LinearLayout>
