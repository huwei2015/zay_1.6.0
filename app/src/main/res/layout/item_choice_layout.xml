<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/jjjjjj">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="aaaaaaaaaaaaaaaaaaa"
            android:id="@+id/textView"/>

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="正确"/>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"

                android:text="错误"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/answer_layout"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xiangjie_iv"
            android:src="@mipmap/icon_xiangjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/anwer_choice"
            android:text="答案：A"
            android:layout_below="@id/xiangjie_iv"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detailAnswer_tv"
            android:layout_width="wrap_content"
            android:layout_below="@+id/anwer_choice"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
