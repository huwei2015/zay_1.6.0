<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/zLessonNum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

    <!--android:background="@color/bgNewGray"-->

    <LinearLayout
        android:id="@+id/zhuName_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/zLessonNum_tv"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/bgNewGray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_group_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/group_lesson_navagation_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/zhuName_ll"
        android:background="@color/light_Gray_New" />

</RelativeLayout>
