<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/white_bg_retangle"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dialog_dismiass_iv"
        android:src="@mipmap/arrow_down"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/haveDone_pop_tv"
            android:layout_width="wrap_content"
            android:text="已答"
            android:padding="15dp"
            android:textColor="@color/lightBlue"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/noDone_pop_tv"
            android:layout_width="wrap_content"
            android:text="未答"
            android:layout_toRightOf="@+id/haveDone_pop_tv"
            android:padding="15dp"
            android:textColor="@color/gray_tv"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.administrator.zahbzayxy.stickheadgv.StickyGridHeadersGridView
                android:id="@+id/asset_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:columnWidth="90dip"
                android:numColumns="5"
                android:horizontalSpacing="3dip"
                android:verticalSpacing="3dip"
                android:layout_centerInParent="true"
                android:paddingBottom="60dp"
                android:background="#fff"
                />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</LinearLayout>