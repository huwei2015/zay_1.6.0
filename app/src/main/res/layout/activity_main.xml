<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.zahbzayxy.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!--内容-->
        <RelativeLayout
            android:id="@+id/content_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </RelativeLayout>
        <!--   <LinearLayout
           android:layout_width="match_parent"
           android:background="@color/light_Gray_New"
           android:orientation="horizontal"
           android:layout_height="0.6dp"
           tools:ignore="Suspicious0dp"/>
android:layout_marginTop="10dp"
    -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_Gray_New"></View>
        <RadioGroup
            android:id="@+id/bottom_rg"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:scaleType="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/homePager_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_imag_selected"
                android:textSize="10sp"
                android:text="首页"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/lessonCenter_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="学习"
                android:textSize="10sp"
                android:drawablePadding="4dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/lesson_img_selected"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/testCenter_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="考试"
                android:textSize="10sp"
                android:drawablePadding="4dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/test_imag_selected"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/userCenter_rb"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:layout_weight="1"
                android:button="@null"
                android:text="我的"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/person_imag_selected"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
