<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.zahbzayxy.activities.UseStudyCardActivity">
    <RelativeLayout
        android:background="@color/bg"
        android:layout_width="match_parent"

        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back_studyCardPay_iv"
            android:src="@mipmap/jiantou_big"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="学习卡"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="使用已购买学习卡的卡号"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg_retangle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/studyCardNum_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:hint="输入卡号"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg_retangle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/studyCardPassword_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:hint="输入卡号密码"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/studyCardPay_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/queren_blue_bg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
