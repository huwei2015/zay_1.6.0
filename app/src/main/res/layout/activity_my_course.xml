<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/medium_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <com.example.administrator.zahbzayxy.myviews.ImageRadiusView
            android:id="@+id/pMyLesson_img"
            android:src="@mipmap/lesson_name1"
            android:layout_width="130dp"
            android:background="@color/bg_light_Gray"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            app:left_top_radius="8dp"
            app:right_top_radius="8dp"
            app:left_bottom_radius="8dp"
            app:right_bottom_radius="8dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/pMyLesson_img"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="危险化学品经营单位主要负责人和相关人员培训课程"
                android:textColor="@color/testBlack"
                android:textSize="16sp"
                android:minLines="2"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color"
                android:text="学习时间:2019.12.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textColor="@color/text_color"
                    android:text="完成" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="完成"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/on_line_view_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />
</LinearLayout>
