<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <TextView
        android:id="@+id/back_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="5dp"
        android:drawableStart="@mipmap/return_icon"
        android:text="返回"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@mipmap/logo_text"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/phone_icon"
        android:drawablePadding="10dp"
        android:hint="请输入手机号"
        android:background="@null"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color"
        android:typeface="monospace" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <EditText
            android:id="@+id/yanZhengCode_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="40dp"
            android:background="@null"
            android:drawableStart="@mipmap/verification"
            android:focusableInTouchMode="true"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:padding="5dp"
            android:textColorHighlight="#cccccc"
            android:textColorHint="@color/text_color" />

        <TextView
            android:id="@+id/getCode_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_bg_shape"
            android:text="获取验证码"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />


    <EditText
        android:id="@+id/resetPW_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/pwd_icon"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:background="@null"
        android:inputType="textPassword"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />
    <EditText
        android:id="@+id/aginPW_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/confirm_pwd"
        android:drawablePadding="10dp"
        android:hint="请确认密码"
        android:background="@null"
        android:inputType="textPassword"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/register_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_bg_shape"
        android:text="免费注册"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
