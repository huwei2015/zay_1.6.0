<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/change_app"
    tools:context="com.example.administrator.zahbzayxy.activities.BuyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="中安云教育"
            android:alpha="0.8"
            android:textStyle="bold"
            android:textColor="@color/orangered"
            android:onClick="zAYOnclick"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/white_bg_retangle"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:alpha="0.8"
            android:textStyle="bold"
            android:textColor="@color/orangered"
            android:text="宁波"
            android:gravity="center"
            android:textSize="18sp"
            android:onClick="nBOnClick"
            android:background="@drawable/white_bg_retangle"
            android:layout_height="50dp" />
        </LinearLayout>


</RelativeLayout>
