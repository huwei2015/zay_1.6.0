<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/light_Gray"
    tools:context="com.example.administrator.zahbzayxy.activities.SetPhoneActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/pC_back_iv"
        android:layout_width="wrap_content"
        android:src="@mipmap/jiantou_big"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_height="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="修改手机号"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_height="match_parent" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/sj_tv"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="+86"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/newPhone_et"
            android:hint="请输入新手机号"
            android:layout_toRightOf="@+id/sj_tv"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/newPhoneGetCode_bt"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/retangle_bg"

            android:layout_margin="10dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="验证码"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/changePhoneCode_et"
            android:gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="输入密码"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/cPPW_et"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <Button
        android:id="@+id/phoneChangCommit_bt"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:text="提交"
        android:textSize="18sp"
        android:layout_marginRight="40dp"
        android:background="@drawable/queren_blue_bg"
        android:layout_height="45dp" />
</LinearLayout>
