<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:focusable="false"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/zyfzr_rl"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zyfzr_iv1"
            android:layout_width="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:background="@color/mediumblue"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/zyfzr_tv1"
            android:textSize="16sp"
            android:textColor="@color/mediumblue"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/zyfzr_iv1"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.example.administrator.zahbzayxy.myviews.MyGridView
        android:id="@+id/home_item_classDetail_gv"
        android:layout_width="match_parent"
        android:numColumns="2"

        android:layout_height="match_parent"></com.example.administrator.zahbzayxy.myviews.MyGridView>
</LinearLayout>
