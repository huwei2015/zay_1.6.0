<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/jjjjjj">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/textView"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:button="@mipmap/a_new"
            android:id="@+id/radioButtonA"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:button="@mipmap/b_new"
            android:padding="5dp"
            android:id="@+id/radioButtonB"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:visibility="invisible"
            android:layout_marginLeft="5dp"
            android:button="@mipmap/c_new"
            android:id="@+id/radioButtonC"/>
        <RadioButton
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter"
            android:button="@mipmap/d_new"
            android:id="@+id/radioButtonD"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:button="@mipmap/e_new"
            android:id="@+id/radioButtonE"/>
        <RadioButton
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:button="@mipmap/f_new"
            android:id="@+id/radioButtonF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tijiao"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/answer_layout"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:visibility="visible"
        android:layout_marginBottom="120dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xiangjie_iv"
            android:text="最佳解析"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/testBlueTv"
            android:src="@mipmap/icon_xiangjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/anwer_choice"
            android:layout_below="@id/xiangjie_iv"
            android:layout_width="wrap_content"
            android:text="答案:B"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detailAnswer_tv"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_below="@+id/anwer_choice"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
