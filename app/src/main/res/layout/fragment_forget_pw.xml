<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Gray"
    android:orientation="vertical"
    tools:context="com.example.administrator.zahbzayxy.fragments.ForgetPWFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/forgetPWBack_iv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/jiantou_big" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phone_et_forgetPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/phone_icon"
        android:drawablePadding="10dp"
        android:hint="请输入手机号"
        android:background="@null"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color"
        android:typeface="monospace" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <EditText
            android:id="@+id/getCode_et_forgetPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="40dp"
            android:background="@null"
            android:drawableStart="@mipmap/verification"
            android:focusableInTouchMode="true"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:padding="5dp"
            android:textColorHighlight="#cccccc"
            android:textColorHint="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/getCode_bt_forgetPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_bg_shape"
            android:text="获取验证码"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/setPW_et_forgetPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/pwd_icon"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:background="@null"
        android:inputType="textPassword"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />
    <EditText
        android:id="@+id/againPW_et_forgetPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@mipmap/confirm_pwd"
        android:drawablePadding="10dp"
        android:hint="请确认密码"
        android:background="@null"
        android:inputType="textPassword"
        android:textColorHighlight="#cccccc"
        android:textColorHint="@color/text_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />


    <Button
        android:id="@+id/check_bt_forgetPw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/login_bg_shape"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>
