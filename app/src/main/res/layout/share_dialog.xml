<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@color/light_Gray"
    android:paddingBottom="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/share_ll"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_gravity="center"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/tv_wb"
           android:src="@mipmap/xinlang_share"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_below="@+id/tv_wb"
           android:text="新浪微博"
           android:textColor="@color/black"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"

        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_wxp"
            android:src="@mipmap/wechat_friend_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tv_wxp"
            android:text="朋友圈"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"

        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_wx"
            android:src="@mipmap/whchat_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="微信好友"
            android:layout_below="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"

        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_qq"
            android:src="@mipmap/qq_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="QQ好友"
            android:layout_below="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_qqz"
            android:src="@mipmap/qq_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="QQ空间"
            android:layout_below="@+id/tv_qqz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/light_Gray"
        android:layout_alignParentStart="true"
        android:layout_height="1dp"></LinearLayout>

<LinearLayout
    android:id="@+id/share_divide"
    android:orientation="horizontal"
    android:layout_below="@+id/share_ll"
    android:layout_marginTop="18dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:background="@color/light_Gray_New"
    android:layout_height="1dp"></LinearLayout>
    <TextView
        android:id="@+id/tv_cancal"
        android:layout_below="@+id/share_divide"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_yellow_cancle"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="取消"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</RelativeLayout>
