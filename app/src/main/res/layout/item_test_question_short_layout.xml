<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/item_test_question_type_tv"
        android:text="选择"
        android:textSize="15sp"
        android:textColor="@color/lightBlue"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_test_question_title_tv"
        android:textSize="15sp"
        android:textColor="@color/dark_Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <com.example.administrator.zahbzayxy.myviews.EditTextWithScrollView
        android:id="@+id/item_test_question_answer_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColorHint="#c4c4c4"
        android:minLines="10"
        android:maxLines="10"
        android:gravity="top|start"
        android:hint="请输入简答题答案"
        android:background="@drawable/answer_bg_shape"
        />

    <TextView
        android:id="@+id/item_test_question_submit_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="66dp"
        android:paddingEnd="66dp"
        android:textSize="18sp"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/submit_bg_shape"
        />

    <TextView
        android:id="@+id/item_test_question_real_answer_tv"
        android:textSize="15sp"
        android:textColor="@color/dark_Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/item_test_question_analysis_tv"
        android:textSize="15sp"
        android:textColor="#c4c4c4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

</LinearLayout>