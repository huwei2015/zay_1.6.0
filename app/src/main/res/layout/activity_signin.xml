<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signin_bg_color">


    <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:background="@mipmap/singin_bg"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back_index"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/s_back"
            android:text="  首页"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/signin_bottom"
        android:paddingTop="60dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/studySignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@mipmap/s_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/signin_tit_color"
                android:text="学习打卡"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/s_line"/>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/studySignin"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/signin_name_color"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20sp"
                />

            <RelativeLayout
                android:id="@+id/signin_ctrlRL"
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/signInBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/signin_circle"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:text="签到"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
